{
    "buildCommand": "cd frontend && pnpm install && pnpm run build",
    "outputDirectory": "frontend/dist",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/:path*"
        },
        {
            "source": "/((?!api|assets|static|_next|favicon.ico|.*\\..*).*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/rss.js": {
            "memory": 256,
            "maxDuration": 10
        }
    }
}